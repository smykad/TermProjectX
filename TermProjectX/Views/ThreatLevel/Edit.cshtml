@model TermProjectX.Models.ThreatLevel

@{
    ViewData["Title"] = "Edit";
}
<h1 class="text-center">@Html.DisplayNameFor(model => model): Edit</h1>


<br />
<br />
<div class="card-deck justify-content-center">
@*CARD*@
<div class="card" style="max-width: 18rem;">

    @*CARD HEADER*@
    <div class="card-header bg-info">
            Edit @Html.DisplayNameFor(model => model)
    </div>
    @*CARD BODY*@
    <div class="card-body bg-dark">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ThreatLevelId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
